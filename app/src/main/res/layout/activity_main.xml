<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_preferences"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="设置"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="哈基米聊天室"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="同一WiFi或连接到您的热点的设备可以互相通信"
        android:textSize="12sp"
        android:textColor="@color/textSecondary"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cardBackground"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备信息"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvIpAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="本机IP: 获取中..."
                android:textSize="14sp"
                android:textColor="#666666" />

            <Button
                android:id="@+id/btnRefreshIp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刷新IP"
                android:textSize="12sp"
                android:minHeight="36dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:backgroundTint="#f10a0a" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvRoomCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="房间号: 未生成"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btnCopyRoomCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="复制"
                android:textSize="12sp"
                android:enabled="false"
                android:minHeight="36dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:backgroundTint="@color/buttonSecondary" />
        </LinearLayout>

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入你的昵称（最多 5 字）"
            android:textColorHint="@color/textTertiary"
            android:textColor="@color/textPrimary"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="5"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_edittext" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/infoLayout">

        <Button
            android:id="@+id/btnCreateRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="创建房间"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/buttonSecondary"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text=""
            android:textColor="@color/textTertiary"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etRoomId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="输入7位房间号（如：ABC1234）或IP地址"
            android:textColorHint="@color/textTertiary"
            android:textColor="@color/textPrimary"
            android:inputType="textCapCharacters"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/bg_edittext" />

        <Button
            android:id="@+id/btnJoinRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="加入房间"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/buttonPrimary"
            android:padding="12dp"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvHelp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="使用说明:\n1. 创建房间后，将房间号分享给好友\n2. 好友输入房间号即可加入\n3. 也支持直接输入IP地址加入\n4. 确保所有设备连接同一WiFi"
        android:textSize="11sp"
        android:textColor="#999999"
        android:lineSpacingExtra="2dp"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/actionLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>