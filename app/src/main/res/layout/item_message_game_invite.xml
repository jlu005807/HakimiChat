<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvGameInvite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/cardBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 游戏图标和标题 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivGameIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_tictactoe"
                    android:contentDescription="游戏图标" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <TextView
                        android:id="@+id/tvGameName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="井字棋"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvSender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XXX 发起了游戏"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 游戏状态信息 -->
            <TextView
                android:id="@+id/tvGameStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等待玩家加入 (1/2)"
                android:textSize="12sp"
                android:textColor="@color/textTertiary"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <!-- 分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- 按钮区域 -->
            <LinearLayout
                android:id="@+id/llButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnJoinGame"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="加入游戏"
                    android:textSize="14sp"
                    android:backgroundTint="@color/buttonPrimary"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnSpectate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="观战"
                    android:textSize="14sp"
                    android:backgroundTint="@color/buttonSecondary"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- 游戏已开始或已满的提示 -->
            <TextView
                android:id="@+id/tvDisabledHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="游戏已开始"
                android:textSize="14sp"
                android:textColor="@color/textTertiary"
                android:gravity="center"
                android:padding="8dp"
                android:visibility="gone" />

            <!-- 时间戳 -->
            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textSize="10sp"
                android:textColor="@color/textTertiary"
                android:layout_gravity="end"
                android:paddingTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
