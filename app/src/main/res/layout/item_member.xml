<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- 头像圆圈 -->
    <TextView
        android:id="@+id/tvAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_avatar_circle"
        android:gravity="center"
        android:text="用"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- 昵称和标签容器 -->
    <LinearLayout
        android:id="@+id/layoutNameAndBadges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvAvatar"
        android:layout_marginStart="12dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <!-- 昵称 -->
        <TextView
            android:id="@+id/tvMemberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成员昵称"
            android:textSize="16sp"
            android:textColor="@color/textPrimary"
            android:textStyle="bold" />

        <!-- 标签容器（房主和我） -->
        <LinearLayout
            android:id="@+id/layoutBadges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHostBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👑 房主"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_host_badge"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvMeBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_me_badge"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_marginStart="6dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnKick"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:minWidth="60dp"
        android:text="踢出"
        android:textSize="13sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />
</RelativeLayout>
