<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/backgroundColor">

    <!-- 游戏信息头部 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="6dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:translationY="-12dp"
        android:minHeight="72dp"
        android:paddingTop="12dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tvGameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="井字棋对战"
            android:textColor="@color/textPrimary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvGameStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="等待玩家加入..."
            android:textColor="@color/textSecondary"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/cardBackground"
            android:paddingTop="12dp"
            android:paddingBottom="20dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp">

        <!-- 标题与状态：独立一组，靠上显示 -->

            <!-- 玩家信息：左侧和右侧各自带头像，类似聊天布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <!-- 玩家 X（左侧） -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start|center_vertical">

                <TextView
                    android:id="@+id/ivPlayerXAvatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_avatar_circle"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="0dp" />

                <TextView
                    android:id="@+id/tvPlayerX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="玩家X: "
                    android:textSize="12sp"
                    android:textColor="@color/textPrimary" />
            </LinearLayout>

            <!-- 玩家 O（右侧） -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end|center_vertical">

                <TextView
                    android:id="@+id/tvPlayerO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="玩家O: "
                    android:textSize="12sp"
                    android:textColor="@color/textPrimary" />

                <TextView
                    android:id="@+id/ivPlayerOAvatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_avatar_circle"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="0dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- 棋盘 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/black"
        android:layout_gravity="center">

        <!-- 第一行 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_00"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:background="@drawable/cell_background"
                android:contentDescription="格子0,0" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <ImageButton
                android:id="@+id/btn_01"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:background="@drawable/cell_background"
                android:contentDescription="格子0,1" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <ImageButton
                android:id="@+id/btn_02"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:background="@drawable/cell_background"
                android:contentDescription="格子0,2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <!-- 第二行 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:background="@drawable/cell_background"
                android:contentDescription="格子1,0" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <ImageButton
                android:id="@+id/btn_11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:background="@drawable/cell_background"
                android:contentDescription="格子1,1" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <ImageButton
                android:id="@+id/btn_12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:background="@drawable/cell_background"
                android:contentDescription="格子1,2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <!-- 第三行 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_20"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:background="@drawable/cell_background"
                android:contentDescription="格子2,0" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <ImageButton
                android:id="@+id/btn_21"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:background="@drawable/cell_background"
                android:contentDescription="格子2,1" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <ImageButton
                android:id="@+id/btn_22"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:background="@drawable/cell_background"
                android:contentDescription="格子2,2" />
        </LinearLayout>
    </LinearLayout>

    <!-- 观战者列表 -->
    <TextView
        android:id="@+id/tvSpectators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="观战者: "
        android:textSize="14sp"
        android:textColor="@color/textSecondary"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <!-- 按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnRestart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="再来一局"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/buttonPrimary"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="退出游戏"
            android:textSize="14sp"
            android:backgroundTint="@android:color/holo_red_dark" />
    </LinearLayout>

</LinearLayout>
